<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bacround_home">

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shape_item_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            android:background="@color/color"
            app:cardBackgroundColor="@color/bacround_home_edit"
            >

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_bakicn"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/tv_name_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baking"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textSize="16sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>